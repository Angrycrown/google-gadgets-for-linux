<view height="555" width="714" onopen="view_onOpen()">
  <div height="100%" width="100%" background="images/background.png"
    backgroundMode="stretchMiddle">
    <label enabled="true" hitTest="htclient" name="language_label" x="10"
      y="19" onsize="language_label_onsize()" color="#FFFFFF"
      valign="middle">&SHOW_ONLY_LABEL;
    </label>
    <div height="23" name="language_box_div" width="166" x="82" y="17"
      background="images/control_border.png" backgroundMode="stretchMiddle">
      <combobox height="440" name="language_box" width="160" x="3" y="2" background="#FFFFFF"
        itemWidth="100%" itemHeight="19" onchange="language_box_onchange()"
        maxDroplistItems="30" type="droplist"/>
    </div>
    <div height="23" width="158" x="507" y="17" background="images/control_border.png"
      backgroundMode="stretchMiddle">
      <edit height="19" name="search_box" width="152" x="3" y="2" onfocusin="search_box_onfocusin()"
        onfocusout="search_box_onfocusout()" onchange="search_box_onchange()" color="#808080"
        value="&SEARCH_GADGETS;"/>
    </div>
    <button name="search_button" x="663" y="8" downImage="images/search_lens_down.png"
      image="images/search_lens_default.png" overImage="images/search_lens_hover.png"
      onclick="DoSearch()"
     />
    <div height="400" width="145" x="6" y="83">
      <div height="23" name="category_hover_img" opacity="55" width="100%"
        visible="false" background="images/category_hover.png"
        backgroundMode="stretchMiddle"/>
      <div height="23" name="category_active_img" width="100%" visible="false"
        background="images/category_active.png" backgroundMode="stretchMiddle"/>
    </div>
    <div height="400" name="categories_div" width="139" x="9" y="83"
     />
    <div height="372" name="plugins_div" width="536" x="162" y="62"/>
    <label name="plugin_title" width="530" x="163" y="442" color="#FFFFFF"
      size="9" trimming="character-ellipsis"/>
    <label name="plugin_description" width="530" x="163" y="458"
      color="#FFFFFF" size="9" trimming="character-ellipsis"
      wordwrap="true" onsize="plugin_description_onsize()"/>
    <label name="plugin_other_data" width="530" x="163" y="490" color="#FFFFFF"
      size="8" trimming="character-ellipsis"/>
    <button name="previous_button" x="600" y="511" onclick="previous_button_onclick()"
      downImage="images/previous_down.png" image="images/previous_default.png"
      overImage="images/previous_hover.png"/>
    <label enabled="true" height="39" hitTest="htclient" name="page_label"
      x="620" y="511" onsize="page_label_onsize()" align="center" color="#FFFFFF"
      valign="middle"/>
    <button name="next_button" x="665" y="511" onclick="next_button_onclick()"
      downImage="images/next_down.png" image="images/next_default.png"
      overImage="images/next_hover.png"/>
  </div>
  <script src="main.js" />
</view>
