<view height="200" resizable="true" width="200" onopen="view_onOpen()"
  onsizing="View_OnSizing()" onoptionchanged="View_OnOptionChanged()">
    <img height="9" name="Backupground_TopLeft" width="8" src="todo_bkgnd_topleft.png"/>
    <img height="9" name="Backupground_Top" width="184" x="8" src="todo_bkgnd_top.png"/>
    <img height="9" name="Backupground_TopRight" width="8" x="191" src="todo_bkgnd_topright.png"/>
    <img height="174" name="Backupground_Left" width="8" y="9" src="todo_bkgnd_left.png"/>
    <img height="174" name="Backupground_Right" width="8" x="191" y="9"
      src="todo_bkgnd_right.png"/>
    <img height="174" name="Backupground_Center" width="184" x="8" y="9"
      src="todo_bkgnd_center.png"/>
    <img height="18" name="Backupground_BottomLeft" width="8" y="183"
      src="todo_bkgnd_bottomleft.png"/>
    <img height="18" name="Backupground_BottomRight" width="8" x="191"
      y="183" src="todo_bkgnd_bottomright.png"/>
    <img height="18" name="Backupground_Bottom" width="184" x="8" y="183"
      src="todo_bkgnd_bottom.png"/>
    <img height="28" name="TodoIcon" width="28" src="todo_icon.png"/>
    <edit height="15" name="AddItem" width="154" x="28" y="6" onfocusin="AddItem_OnFocusIn()"
      onfocusout="AddItem_OnFocusOut()" onkeypress="AddItem_OnKeyPress()"
      onmouseout="AddItem_OnMouseOut()" onmouseover="AddItem_OnMouseOver()"
      color="#102102102" background="#F5F5F5" font="Tahoma" size="8" value="&ADD_ITEM_STRING;"/>
    <img height="13" name="Footer_Left" width="8" y="182" src="todo_footer_left.png"/>
    <img height="13" name="Footer_Right" width="8" x="189" y="182" src="todo_footer_right.png"/>
    <img height="13" name="Footer_Center" width="182" x="8" y="182" src="todo_footer_center.png"/>
    <img height="1" name="Divider" opacity="80" width="196" y="26" src="todo_divider.png"/>
    <div height="151" name="TodoItems" width="196" y="27" background="#00C0C0E0"/>
    <div height="18" name="Page_Control" width="70" x="66" y="182">
        <button height="11" name="Page_Back" width="7" y="1" onclick="PageBack_OnClick()"
          downImage="todo_back_down.png" image="todo_back_up.png"
          overImage="todo_back_over.png"/>
        <label height="16" name="Current_Page" x="14" y="1" align="center"
          color="#FFFFFF" font="Tahoma" size="7">1
        </label>
        <label height="16" name="Page_Of_Label" x="28" y="1" align="center"
          color="#FFFFFF" font="Tahoma" size="7">of
        </label>
        <label height="16" name="Total_Pages" x="44" y="1" align="center" color="#FFFFFF"
          font="Tahoma" size="7">1
        </label>
        <button height="11" name="Page_Front" width="7" x="62" y="1" onclick="PageFront_OnClick()"
          downImage="todo_front_down.png" image="todo_front_up.png"
          overImage="todo_front_over.png"/>
    </div>
    <script src="common.js" />
    <script src="main.js" />
</view>
